<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOMICILIO"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servicio de Cortes:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <RadioGroup
            android:id="@+id/RDGCORTESD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/RDBNORMALD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/RDBESCOLARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolar"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/RDBMILITARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Militar"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/RDBMODERNOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderno"
                android:textSize="16sp"/>
        </RadioGroup>

        <EditText
            android:id="@+id/EDTHORA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la hora"
            android:layout_marginTop="20dp"
            android:inputType="time"/>

        <Button
            android:id="@+id/BTNHORA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Hora"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/TVFECHA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/BTNCONFIRMAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR"
            android:layout_marginTop="30dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/BTNREGRESAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGRESAR"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
